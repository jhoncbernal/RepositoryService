{
  "name": "template-service-repository",
  "version": "1.0.0",
  "description": "basic template service repository",
  "main": "dist/app.js",
  "scripts": {
    "start": "NODE_ENV=development webpack",
    "build": "webpack",
    "test": "jest unit --setupFiles dotenv/config",
    "test:integration": "jest integration --passWithNoTests --setupFiles dotenv/config",
    "quickTest": "jest unit --bail --silent --setupFiles dotenv/config",
    "serve": "yarn build && node dist/app.js",
    "prepare": "husky install"
  },
  "keywords": [
    "template",
    "service",
    "repository"
  ],
  "author": "jhon casallas",
  "license": "ISC",
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.1",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.9.6",
    "@types/reflect-metadata": "^0.1.0",
    "@types/uuid": "^8.3.1",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.2",
    "@types/webpack-node-externals": "^2.5.2",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-plugin-transform-require-context": "^0.1.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^3.0.1",
    "handlebars-loader": "^1.7.1",
    "nodemon-webpack-plugin": "^4.5.2",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.5.5",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.0.2",
    "inversify": "^6.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "mongoose": "^6.2.1",
    "ts-loader": "^9.2.6"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "jest": true,
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-var": "warn",
      "no-unused-vars": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "warn",
            "error"
          ]
        }
      ]
    }
  }
}
